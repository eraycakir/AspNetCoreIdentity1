@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Admin Index</h1>

<table class="table table-bordered table-striped">

    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
    </tr>

    @if (Model.Count <= 0)
    {
        <tr>
            <td colspan="3">Hiç bir üye kaydı yok.</td>
        </tr>
    }
    else
    {
        @foreach (var appUser in Model)
        {
            <tr>
                <td>@appUser.Id</td>
                <td>@appUser.UserName</td>
                <td>@appUser.Email</td>
            </tr>
        }
    }
</table>